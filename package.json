{
  "name": "redux-saga-firebase",
  "version": "0.13.0",
  "description": "A redux saga integration for firebase.",
  "author": "Nathan Gaberel <nathan@gnab.fr>",
  "homepage": "https://github.com/n6g7/redux-saga-firebase",
  "license": "MIT",
  "main": "dist/index.js",
  "scripts": {
    "del": "rimraf dist",
    "build": "yarn del && NODE_ENV=production babel src --out-dir dist",
    "build:win": "yarn del&&set NODE_ENV=production&&babel src --out-dir dist",
    "prepare": "yarn build",
    "prepublishOnly": "yarn test",
    "pretest": "standard 'src/**/*.js'",
    "test": "NODE_ENV=test jest",
    "test:coverage": "yarn test --coverage",
    "test:coverage:win": "yarn test:win --coverage",
    "test:win": "set NODE_ENV=test&&jest"
  },
  "repository": {
    "url": "git@github.com:n6g7/redux-saga-firebase.git",
    "type": "git"
  },
  "dependencies": {
    "redux-saga": "^0.16.0"
  },
  "peerDependencies": {
    "firebase": "^4.6.0"
  },
  "devDependencies": {
    "@babel/cli": "^7.0.0-beta.49",
    "@babel/core": "^7.0.0-beta.49",
    "@babel/plugin-transform-runtime": "^7.0.0-beta.49",
    "@babel/preset-env": "^7.0.0-beta.49",
    "@babel/preset-stage-3": "^7.0.0-beta.49",
    "@babel/runtime": "^7.0.0-beta.49",
    "babel-core": "^7.0.0-0",
    "babel-jest": "^23.0.1",
    "jest": "^23.1.0",
    "regenerator-runtime": "^0.11.1",
    "rimraf": "^2.6.2",
    "standard": "^11.0.1",
    "whatwg-fetch": "^2.0.3"
  },
  "jest": {
    "coverageThreshold": {
      "global": {
        "branches": 95,
        "functions": 95,
        "lines": 95,
        "statements": 95
      }
    }
  },
  "standard": {
    "globals": [
      "afterAll",
      "afterEach",
      "beforeAll",
      "beforeEach",
      "describe",
      "expect",
      "fetch",
      "it",
      "jest"
    ]
  }
}
